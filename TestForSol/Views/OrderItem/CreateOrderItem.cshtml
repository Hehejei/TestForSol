@model TestForSol.Models.OrderItem

@{
    var orderId = ViewBag.OrderId;
    ViewData["Title"] = "Create Order";
}

<div class="container text-center text-uppercase">
    <div class="card p-4" style="max-width: 430px; margin: 20px auto;">
        @using (Html.BeginForm("CreateOrderItem", "OrderItem", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Добавить строку заказа</legend>

                @Html.HiddenFor(model => model.OrderId)

                <div class="editor-label">Name</div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="editor-label">Quantity</div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Quantity)
                    @Html.ValidationMessageFor(model => model.Quantity)
                </div>

                <div class="editor-label">Unit</div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Unit)
                    @Html.ValidationMessageFor(model => model.Unit)
                </div>
 
                <p class="pt-4">
                    <input type="submit" value="Добавить"  class="btn btn-primary"/>
                </p>
            </fieldset>
        } 
    </div>
   

    <div>
        @Html.ActionLink("Назад", "AboutOrder", "Order", new{ id = orderId })
    </div>
</div>